generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  username      String?   @unique
  bio           String?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Seller Verification fields
  isVerified       Boolean  @default(false)
  verificationDate DateTime?
  trustScore       Float    @default(0.0)
  
  // User Preferences
  theme            String?  @default("system") // "light", "dark", "system"

  products      Product[]
  buyingOrders  Order[]   @relation("BuyerOrders")
  sellingOrders Order[]   @relation("SellerOrders")
  messagesSent  Message[] @relation("SentMessages")
  notifications Notification[]
  transactions  Transaction[]
  writtenReviews  Review[] @relation("WrittenReviews")
  receivedReviews Review[] @relation("ReceivedReviews")
  wishlist      Wishlist[]
  badges        Badge[]
  sellerStats   SellerStats?
  raisedDisputes Dispute[] @relation("RaisedDisputes")
  resolvedDisputes Dispute[] @relation("ResolvedDisputes")
  disputeMessages DisputeMessage[]
  
  // Social Commerce
  followers     Follow[]        @relation("UserFollowedBy")
  following     Follow[]        @relation("UserFollows")
  socialProfiles SocialProfile[]
  reportsMade   Report[]        @relation("ReportsMade")
  savedSearches SavedSearch[]
  
  // Gamification
  pointTransactions    PointTransaction[]
  referralCode         ReferralCode?
  leaderboardSnapshots LeaderboardSnapshot[]
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  images      String[]
  category    String
  subcategory String?
  tags        String[]
  condition   String
  location    String?
  sellerId    String
  seller      User     @relation(fields: [sellerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Multi-currency support (Phase 3.5)
  paymentToken String?  @default("ETH") // ETH, USDC, USDT, DAI, etc.
  orders      Order[]
  wishlistedBy Wishlist[]
  reports      Report[]
}

model Order {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  buyerId       String
  buyer         User     @relation("BuyerOrders", fields: [buyerId], references: [id])
  sellerId      String
  seller        User     @relation("SellerOrders", fields: [sellerId], references: [id])
  status        String   @default("PENDING") // PENDING, PAID, SHIPPED, DELIVERED, COMPLETED, DISPUTED, CANCELLED, REFUNDED
  totalAmount   Float
  escrowAddress String? // Transaction hash or ID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  messages      Message[]
  transactions  Transaction[]
  review        Review?
  dispute       Dispute?
}

model Message {
  id        String   @id @default(cuid())
  content   String
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  senderId  String
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  isRead    Boolean  @default(false)
  readAt    DateTime?
  attachments String[]
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String   // ORDER_UPDATE, MESSAGE, SYSTEM
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id        String   @id @default(cuid())
  hash      String   @unique
  amount    Float
  type      String   // DEPOSIT, RELEASE, REFUND
  status    String   // PENDING, CONFIRMED, FAILED
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  orderId   String?
  order     Order?   @relation(fields: [orderId], references: [id])
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5
  comment   String?
  authorId  String
  author    User     @relation("WrittenReviews", fields: [authorId], references: [id])
  targetId  String
  target    User     @relation("ReceivedReviews", fields: [targetId], references: [id])
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id])
  createdAt DateTime @default(now())
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

// Phase 4: Dispute Resolution
model Dispute {
  id          String   @id @default(cuid())
  orderId     String   @unique
  order       Order    @relation(fields: [orderId], references: [id])
  raisedBy    String
  raiser      User     @relation("RaisedDisputes", fields: [raisedBy], references: [id])
  reason      String
  description String
  status      String   // OPEN, IN_REVIEW, RESOLVED, CLOSED
  resolution  String?
  resolvedBy  String?
  resolver    User?    @relation("ResolvedDisputes", fields: [resolvedBy], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  messages    DisputeMessage[]
}

model DisputeMessage {
  id         String   @id @default(cuid())
  disputeId  String
  dispute    Dispute  @relation(fields: [disputeId], references: [id])
  senderId   String
  sender     User     @relation(fields: [senderId], references: [id])
  message    String
  createdAt  DateTime @default(now())
}

// Phase 5: Seller Verification & Badges
model Badge {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // VERIFIED, TOP_SELLER, FAST_SHIPPER, RESPONSIVE, TRUSTED
  earnedAt    DateTime @default(now())
  description String
}

model SellerStats {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id])
  totalSales          Int      @default(0)
  completedOrders     Int      @default(0)
  averageRating       Float    @default(0.0)
  averageResponseTime Int      @default(0) // in minutes
  averageShipTime     Int      @default(0) // in hours
  disputeRate         Float    @default(0.0) // percentage
  updatedAt           DateTime @updatedAt
}

// Phase 3.1: Social Commerce & Trust
model Follow {
  id          String   @id @default(cuid())
  followerId  String
  follower    User     @relation("UserFollows", fields: [followerId], references: [id])
  followingId String
  following   User     @relation("UserFollowedBy", fields: [followingId], references: [id])
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}

model SocialProfile {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  platform  String   // TWITTER, GITHUB, INSTAGRAM
  username  String
  url       String?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, platform])
}

model Report {
  id          String   @id @default(cuid())
  reporterId  String
  reporter    User     @relation("ReportsMade", fields: [reporterId], references: [id])
  targetType  String   // PRODUCT, USER
  targetId    String   // ID of the product or user being reported
  reason      String
  description String?
  status      String   @default("PENDING") // PENDING, REVIEWED, DISMISSED, ACTION_TAKEN
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Optional relation if reporting a product directly (for referential integrity)
  productId   String?
  product     Product? @relation(fields: [productId], references: [id])
}

// Phase 3.2: User Experience & Engagement
model SavedSearch {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  name        String
  query       String?
  category    String?
  minPrice    Float?
  maxPrice    Float?
  condition   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Phase 3.3: Gamification & Loyalty
model PointTransaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Int
  type        String   // EARN, SPEND, BONUS
  source      String   // PURCHASE, SALE, REFERRAL, BADGE, etc.
  description String?
  createdAt   DateTime @default(now())
}

model ReferralCode {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  code        String   @unique
  uses        Int      @default(0)
  createdAt   DateTime @default(now())
}

model LeaderboardSnapshot {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  period      String   // WEEKLY, MONTHLY, ALL_TIME
  type        String   // SELLER, BUYER, POINTS
  rank        Int
  value       Float    // sales count, purchase count, or points
  createdAt   DateTime @default(now())

  @@unique([userId, period, type, createdAt])
}
